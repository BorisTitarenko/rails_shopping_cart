%h2 Current Cart
%table
  %thead
    %tr
      %td Product
      %td Price
      %td Quantity
      %td
  %tbody
    - @items.each do |item|
      %tr
        %td= item.product.title
        %td= number_to_currency item.price
        %td= item.quantity
        %td
          = form_for item, method: :delete do |f|
            = f.submit "Remove"
  %tfoot
    %tr
      %td( align="right")
        = number_to_currency current_cart.sub_total

= link_to "Checkout", checkout_path
